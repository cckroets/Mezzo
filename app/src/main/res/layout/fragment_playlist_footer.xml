<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingTop="4dp"
    android:layout_margin="4dp"
    android:paddingLeft="4.125dp"
    android:paddingRight="4.125dp"
    android:paddingBottom="4.5dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXPORT PLAYLIST STATS"
        android:id="@+id/export_playlist_button"
        android:drawableLeft="@drawable/abc_ic_menu_share_mtrl_alpha"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/abc_ic_menu_share_mtrl_alpha"
        android:drawable="@color/primary"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
</FrameLayout>