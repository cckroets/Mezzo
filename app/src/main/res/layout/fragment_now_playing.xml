<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/player_album_art"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:background="@android:color/holo_green_dark"
        android:src="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#b4000000"
        android:orientation="vertical">

        <TextView
            android:background="#64000000"
            android:id="@+id/player_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="Title of Song"
            android:textColor="@android:color/primary_text_dark"
            android:textSize="12pt"/>

        <TextView
            android:background="#64000000"
            android:id="@+id/player_album_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="Artist Name - Album"
            android:textColor="@android:color/secondary_text_dark"
            android:textSize="9pt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#64000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_seek_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="0:45"
                android:textColor="@android:color/secondary_text_dark"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/player_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:text="4:23"
                android:textColor="@android:color/secondary_text_dark"/>

        </LinearLayout>

        <SeekBar
            android:id="@+id/player_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#64000000"
            android:progress="20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="#64000000">

            <ImageView
                android:id="@+id/player_repeat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="16dp"
                android:src="@android:drawable/ic_menu_rotate"/>

            <ImageView
                android:id="@+id/player_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@android:drawable/ic_media_previous"/>

            <ImageView
                android:id="@+id/player_pause"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@android:drawable/ic_media_pause"/>

            <ImageView
                android:id="@+id/player_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="12dp"
                android:src="@android:drawable/ic_media_next"/>

            <ImageView
                android:id="@+id/player_shuffle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="16dp"
                android:src="@android:drawable/ic_menu_directions"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>